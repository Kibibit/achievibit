{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "incremental": true,
    "baseUrl": "./",
    "paths": {
      "@kb-modules": ["src/modules/index"],
      "@kb-models": ["src/models/index"],
      "@kb-config": ["src/config/index"],
      "@kb-errors": ["src/errors/index"],
      "@kb-dev-tools": ["src/dev-tools/index"],
      "@kb-app": ["src/app/index"],
      "@kb-engines": ["src/engines/index"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
